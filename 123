@Override
public Object deserialize(JsonParser p, DeserializationContext ctxt) throws IOException {
    JsonToken token = p.currentToken();

    // Case 1: String field
    if (type.getRawClass() == String.class && token == JsonToken.VALUE_STRING) {
        String value = p.getText();
        if ("*".equals(value)) {
            return null; // ignore "*"
        }
        return value; // normal string
    }

    // Case 2: POJO field but input is String → create empty object
    if (token == JsonToken.VALUE_STRING) {
        try {
            return type.getRawClass().getDeclaredConstructor().newInstance();
        } catch (Exception e) {
            return null; // fallback: null if no default ctor
        }
    }

    // Case 3: all else → normal
    return super.deserialize(p, ctxt);
}