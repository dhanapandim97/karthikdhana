@Test
public void testGetCpQuoteValidationFailure() {
    // Arrange – force validator to throw
    doThrow(new RuntimeException("Validation failed"))
            .when(cpUtil).validateCpQuoteRequest(any(), any());

    // Act & Assert – expect RuntimeException
    RuntimeException ex = assertThrows(RuntimeException.class, () ->
            controller.getCpQuote("en", "Bearer token", apiQuoteReq));

    assertThat(ex.getMessage()).isEqualTo("Validation failed");
}