@Test
void testInterruptedExceptionDuringSleep_covered() throws Exception {
    MyClass obj = new MyClass(); // replace with your class

    Runnable failingRunnable = () -> {
        throw new PersistenceException("fail"); // triggers retry + sleep
    };

    Thread testThread = new Thread(() -> obj.retryDboperation(failingRunnable));

    testThread.start();

    // ✅ Wait briefly so the method reaches Thread.sleep(...)
    Thread.sleep(50);

    // ✅ Interrupt *WHILE* it's sleeping
    testThread.interrupt();

    // Wait for method to finish
    testThread.join();
}