import org.junit.jupiter.api.Test;
import org.mockito.Mockito;
import org.springframework.boot.info.BuildProperties;

import static org.junit.jupiter.api.Assertions.assertEquals;

public class BuildInfoControllerTest {

    @Test
    public void testGetBuildInfo() {
        // Mock BuildProperties
        BuildProperties mockBuildProperties = Mockito.mock(BuildProperties.class);
        Mockito.when(mockBuildProperties.getName()).thenReturn("MyApp");
        Mockito.when(mockBuildProperties.getVersion()).thenReturn("1.0.0");

        // Initialize controller
        BuildInfoController controller = new BuildInfoController(mockBuildProperties);

        // Call the method
        BuildProperties result = controller.getBuildInfo();

        // Assertions
        assertEquals("MyApp", result.getName());
        assertEquals("1.0.0", result.getVersion());
    }
}