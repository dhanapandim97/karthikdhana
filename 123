import org.junit.jupiter.api.Test;
import org.mockito.MockedStatic;
import org.mockito.Mockito;
import org.springframework.boot.SpringApplication;

class MyApplicationTest {

    @Test
    void testMainMethodWithoutRunningSpring() {
        try (MockedStatic<SpringApplication> mockStatic = Mockito.mockStatic(SpringApplication.class)) {
            mockStatic.when(() -> SpringApplication.run(MyApplication.class, new String[]{}))
                      .thenReturn(null);  // Prevent real execution

            MyApplication.main(new String[]{});

            mockStatic.verify(() -> SpringApplication.run(MyApplication.class, new String[]{}));
        }
    }
}